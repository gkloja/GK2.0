  cursor: pointer;
  z-index: 99999;
  user-select: none;
  transition: 0.3s ease;
  backdrop-filter: blur(6px);
}

.carrinho-flutuante:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.35);
}

/* √çcone */
.carrinho-flutuante i {
  font-size: 1.3rem;
  color: var(--cor-acento);
}

