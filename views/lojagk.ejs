const carrinho = window.__gk_carrinho;
const desejos = [];
let filtroAtual = "todos";


// ---------- FUN√á√ïES UTIL ----------
function safeParseFloat(v){
  return isNaN(parseFloat(String(v).replace(',', '.')))
    ? 0 
    : parseFloat(String(v).replace(',', '.'));
}

function mostrarNotificacao(texto, tipo='win'){
