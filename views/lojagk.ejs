  carrinhoCount.textContent = totalItens;
}


// ---------- SLIDE DO CARRINHO ----------
function abrirCarrinho(){
  finalizarDiv.style.display = 'block';
  setTimeout(() => finalizarDiv.setAttribute('aria-hidden', 'false'), 20);
}

function fecharCarrinho(){
  finalizarDiv.setAttribute('aria-hidden', 'true');
  setTimeout(() => finalizarDiv.style.display = 'none', 350);
}

fecharBtn.addEventListener('click', () => fecharCarrinho());
carrinhoBtn.addEventListener('click', e => {
  e.stopPropagation();
  const aberto = finalizarDiv.getAttribute('aria-hidden') === 'false';
